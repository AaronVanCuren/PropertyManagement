    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>#1 Property Management Company in Fort Wayne</h1>
    <p class="lead">Lovely Living Property Management launched in 2020.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
