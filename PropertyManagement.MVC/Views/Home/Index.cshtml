@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h1>#1 Property Management Company in Fort Wayne</h1>
    <p class="lead">Lovely Living Property Management launched in 2020.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Listings</h2>
        <p>
            Check out all of our listings.
        </p>
        <p>@Html.ActionLink(HttpUtility.HtmlDecode("Show Listings &raquo;"), "Index", "Listings", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Reviews</h2>
        <p>
            Give us a review or check out reviews by others.
        </p>
        <p>@Html.ActionLink(HttpUtility.HtmlDecode("Show Reviews &raquo;"), "Index", "Reviews", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
    <div class="col-md-4">
        <h2>Vendors</h2>
        <p>
            Check out our approved vendors.
        </p>
        <p>@Html.ActionLink(HttpUtility.HtmlDecode("Show Vendors &raquo;"), "Index", "Vendors", null, new { @class = "btn btn-primary btn-large" })</p>
    </div>
</div>