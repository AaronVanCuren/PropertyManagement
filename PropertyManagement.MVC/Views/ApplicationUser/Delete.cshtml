@model PropertyManagement.Models.ApplicationUsers.ApplicationUserDetail

@{
    ViewBag.Title = "Delete User";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Delete User</h4>
</div>

<div class="modal-body">
    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This user will be permanently deleted and cannot be recovered. Are you sure?</p>
</div>

<div class="modal-footer">

    @using (Html.BeginRouteForm("Default", new
    {
        controller = "ApplicationUser",
        action = "Delete",
        id = Model.Id

    }, FormMethod.Post))

    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </div>
    }

    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
</div>